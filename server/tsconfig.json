{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES6"],
    "module": "CommonJS",
    "allowJs": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "files": ["node-env.d.ts"],
  "include": ["src/**/*.ts"]
}
